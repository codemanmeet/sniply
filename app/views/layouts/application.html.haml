<!doctype html>
%html
	%head
		= stylesheet_link_tag    "application", :media => "all"
		= javascript_include_tag "application"
		= csrf_meta_tags
	%body
		#container.container
			%header
				= render 'layouts/messages'
			#main{:role => "main"}
				%h1 Sniply
				- if current_user
					Welcome #{current_user.name}!
					\#{link_to "Sign Out", signout_path}
				- else
					= link_to "Sign in with Twitter", "/auth/twitter"
				= yield
			%footer